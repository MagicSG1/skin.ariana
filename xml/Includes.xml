<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include file="Includes_Variables.xml" />
  <include file="defaults.xml" />
  <include file="View_50.xml" />
  <include name="9000GrouplistParameters">
    <centerleft>50%</centerleft>
    <centertop>50%</centertop>
    <width>500</width>
    <height>680</height>
    <itemgap>12</itemgap>
    <onleft>noop</onleft>
    <onright>noop</onright>
    <onup>9000</onup>
    <ondown>9000</ondown>
    <onback>50</onback>
    <align>center</align>
    <aligny>center</aligny>
    <orientation>vertical</orientation>
  </include>
  <include name="9000Buttons">
    <include>FocusButtonsAnimation</include>
    <width>500</width>
    <height>68</height>
    <textoffsetx>0</textoffsetx>
    <align>center</align>
    <aligny>center</aligny>
    <font>size20B</font>
  </include>
  <include name="CenterHeading">
    <centerleft>960</centerleft>
    <top>52</top>
    <align>center</align>
    <aligny>center</aligny>
    <width>1000</width>
    <height>75</height>
    <font>size26B</font>
  </include>
  <include name="FullBackground">
    <control type="image" description="Home Fanart">
      <visible>Window.IsActive(Home.xml)</visible>
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <aspectratio>scale</aspectratio>
      <include>Fanart_Fade</include>
      <texture background="true">$VAR[Home.Fanart]</texture>
    </control>
    <control type="image" description="Art">
      <visible>!Window.IsActive(Home.xml)</visible>
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <aspectratio aligny="top">scale</aspectratio>
      <include>Fanart_Fade</include>
      <texture background="true">$VAR[Background.Art]</texture>
    </control>
    <control type="image" description="BG">
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <aspectratio>stretch</aspectratio>
      <texture background="true">$VAR[Background.Overlay]</texture>
    </control>
    <control type="image" description="DebugGrid">
      <visible>Skin.HasSetting(DebugGrid)</visible>
      <left>0</left>
      <top>0</top>
      <width>1920</width>
      <height>1080</height>
      <texture>debuggrid1080.png</texture>
    </control>
  </include>
  <include name="DialogFullBG">
    <control type="image" description="BG">
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <aspectratio>stretch</aspectratio>
      <texture>img/WhiteDot.png</texture>
    </control>
    <control type="image" description="Art">
      <left>0</left>
      <top>0</top>
      <width>100%</width>
      <height>100%</height>
      <aspectratio>stretch</aspectratio>
      <include>Fanart_Fade</include>
      <texture background="true">$VAR[Background.Overlay]</texture>
    </control>
    <control type="image" description="DebugGrid">
      <visible>Skin.HasSetting(DebugGrid)</visible>
      <left>0</left>
      <top>0</top>
      <width>1920</width>
      <height>1080</height>
      <texture>debuggrid1080.png</texture>
    </control>
  </include>
  <include name="MenuFullBG">
    <control type="image">
      <centerleft>960</centerleft>
      <centertop>540</centertop>
      <width>100%</width>
      <height>100%</height>
      <texture background="true">$VAR[Background.Overlay]</texture>
      <colordiffuse>Grey</colordiffuse>
    </control>
  </include>
  <include name="VisibleFadeEffect">
    <animation effect="fade" time="200">VisibleChange</animation>
    <animation effect="fade" time="200">Hidden</animation>
  </include>
  <include name="ContainerVisibleFade">
    <animation effect="fade" time="400">Visible</animation>
    <animation effect="fade" time="200">Hidden</animation>
  </include>
  <include name="OpenClose">
    <animation effect="fade" time="240">WindowOpen</animation>
    <animation effect="fade" time="240">WindowClose</animation>
  </include>
  <include name="Fanart_Fade">
    <fadetime>320</fadetime>
    <animation effect="fade" time="320">Visible</animation>
    <animation effect="fade" time="280">Hidden</animation>
  </include>
  <include name="Icon_Fade">
    <fadetime>200</fadetime>
    <animation effect="fade" time="200">Visible</animation>
    <animation effect="fade" time="100">Hidden</animation>
  </include>
  <include name="HiddenButton">
    <left>-30</left>
    <top>-30</top>
    <width>1</width>
    <height>1</height>
    <label>-</label>
    <texturenofocus>-</texturenofocus>
    <texturefocus>-</texturefocus>
  </include>
  <include name="HeadingR">
    <left>960</left>
    <top>60</top>
    <width>930</width>
    <height>75</height>
    <align>center</align>
    <aligny>bottom</aligny>
    <textcolor>Selected</textcolor>
    <font>size28</font>
  </include>
  <include name="Dimensions_Fullscreen">
    <left>0</left>
    <top>0</top>
    <width>100%</width>
    <height>100%</height>
  </include>
  <include name="Header">
    <control type="group">
      <visible>![Window.IsActive(home) | Window.IsActive(LoginScreen.xml)]</visible>
      <control type="label" description="Heading">
        <left>0</left>
        <top>60</top>
        <align>center</align>
        <aligny>center</aligny>
        <width>1920</width>
        <height>75</height>
        <textcolor>Title</textcolor>
        <font>size28</font>
        <label>$VAR[GlobalHeadings]</label>
      </control>
    </control>
  </include>
  <include name="SeekbarIconsCommons">
    <width>45</width>
    <height>45</height>
    <aspectratio aligny="center" align="left">keep</aspectratio>
  </include>
  <include name="SeekbarLabels">
    <left>0</left>
    <top>525</top>
    <height>75</height>
    <width>1920</width>
    <align>center</align>
    <font>size24B</font>
    <textcolor>Title</textcolor>
    <animation effect="fade" time="200">VisibleChange</animation>
  </include>
  <include name="FocusButtonsAnimation">
    <animation type="Focus" reversible="true">
      <effect type="zoom" center="auto" start="100" end="104" time="100" easing="inout"/>
    </animation>
  </include>
  <include name="FullscreenInfoLabelMain">
    <left>300</left>
    <top>0</top>
    <width>1200</width>
    <scroll>false</scroll>
    <align>left</align>
    <font>size24B</font>
    <textcolor>Title</textcolor>
    <animation effect="fade" time="200">VisibleChange</animation>
  </include>
  <include name="FullscreenInfoLabel2">
    <left>300</left>
    <top>45</top>
    <width>1200</width>
    <scroll>false</scroll>
    <align>left</align>
    <textcolor>Subtitle</textcolor>
    <animation effect="fade" time="200">VisibleChange</animation>
  </include>
  <include name="10Rating">
    <height>24</height>
    <width>135</width>
    <aspectratio align="right">keep</aspectratio>
    <texture>$INFO[ListItem.Rating,badges/,.png]</texture>
  </include>
  <include name="StarRating">
    <height>24</height>
    <width>135</width>
    <aspectratio align="right">keep</aspectratio>
    <texture>$INFO[ListItem.StarRating,badges/]</texture>
  </include>
  <include name="KeyboardButtons">
    <texturenofocus border="4">img/SettingsButtonNF.png</texturenofocus>
    <align>center</align>
    <aligny>center</aligny>
    <textoffsetx>0</textoffsetx>
    <width>68</width>
    <height>68</height>
    <font>size26</font>
  </include>
  <include name="List49_Commons">
    <!--VideoInfo metadata lists-->
    <left>0</left>
    <top>0</top>
    <width>280</width>
    <height>450</height>
    <onleft>noop</onleft>
    <onright>noop</onright>
    <onup>9000</onup>
    <ondown>9000</ondown>
    <pagecontrol>-</pagecontrol>
    <itemlayout height="90" width="280">
      <control type="label">
        <left>0</left>
        <top>0</top>
        <width>280</width>
        <height>45</height>
        <font style="uppercase">size19U</font>
        <align>right</align>
        <aligny>center</aligny>
        <label>$INFO[ListItem.Label]</label>
      </control>
      <control type="label">
        <left>0</left>
        <top>45</top>
        <width>280</width>
        <height>45</height>
        <font>size18</font>
        <align>right</align>
        <aligny>center</aligny>
        <label>$INFO[ListItem.Label2]</label>
      </control>
      <control type="image">
        <left>0</left>
        <top>22</top>
        <width>280</width>
        <height>1</height>
        <texture>$INFO[ListItem.Thumb]</texture>
      </control>
    </itemlayout>
    <focusedlayout height="90" width="280">
      <control type="label">
        <left>0</left>
        <top>0</top>
        <width>280</width>
        <height>45</height>
        <font style="uppercase">size19U</font>
        <align>right</align>
        <aligny>center</aligny>
        <selectedcolor>Selected</selectedcolor>
        <label>$INFO[ListItem.Label]</label>
      </control>
      <control type="label">
        <left>0</left>
        <top>45</top>
        <width>280</width>
        <height>45</height>
        <font>size18</font>
        <align>right</align>
        <aligny>center</aligny>
        <label>$INFO[ListItem.Label2]</label>
      </control>
      <control type="image">
        <left>0</left>
        <top>22</top>
        <width>280</width>
        <height>1</height>
        <texture>$INFO[ListItem.Thumb]</texture>
      </control>
    </focusedlayout>
  </include>
  <include name="HeaderLabelShelf">
    <textoffsetx>24</textoffsetx>
    <height>24</height>
    <width>1860</width>
    <font>size22B</font>
    <textcolor>Label2</textcolor>
    <align>left</align>
  </include>
  <include name="PostersShelfNF">
    <control type="image">
      <left>24</left>
      <top>24</top>
      <width>250</width>
      <height>375</height>
      <texture border="12">img/ThumbBorder.png</texture>
      <bordersize>-9</bordersize>
    </control>
    <control type="image">
      <visible>IsEmpty(ListItem.Art(tvshow.poster))</visible>
      <left>24</left>
      <top>24</top>
      <width>250</width>
      <height>375</height>
      <texture background="true">$INFO[ListItem.Thumb]</texture>
      <aspectratio>scale</aspectratio>
    </control>
    <control type="image">
      <visible>!IsEmpty(ListItem.Art(tvshow.poster))</visible>
      <left>24</left>
      <top>24</top>
      <width>250</width>
      <height>375</height>
      <texture background="true">$INFO[ListItem.Art(tvshow.poster)]</texture>
      <aspectratio>scale</aspectratio>
    </control>
    <control type="group" description="Overlay">
      <control type="image">
        <visible>!IsEmpty(ListItem.Thumb)</visible>
        <right>26</right>
        <top>24</top>
        <height>64</height>
        <width>64</width>
        <aspectratio>keep</aspectratio>
        <texture>OverlayBG.png</texture>
      </control>
      <control type="image">
        <visible>!IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
        <right>30</right>
        <top>28</top>
        <height>28</height>
        <width>28</width>
        <aspectratio>keep</aspectratio>
        <texture>$VAR[Overlay]</texture>
      </control>
    </control>
    <control type="label" description="Label2">
      <visible>container.content(TVshows) | container.content(seasons)</visible>
      <visible>IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
      <right>26</right>
      <top>17</top>
      <height>42</height>
      <width>42</width>
      <font>size14</font>
      <align>center</align>
      <textcolor>LabelFO</textcolor>
      <label>[B]$INFO[ListItem.Property(UnwatchedEpisodes)][/B]</label>
    </control>
    <control type="label" description="Label2">
      <visible>Window.IsActive(home)</visible>
      <left>5</left>
      <top>400</top>
      <width>290</width>
      <height>45</height>
      <font>size19</font>
      <textcolor>LabelNF</textcolor>
      <align>center</align>
      <label>$INFO[ListItem.Season,S,-]$INFO[ListItem.Episode,E]</label>
    </control>
  </include>
  <include name="PostersShelfFO">
    <control type="group">
      <animation type="Focus" reversible="false">
        <effect type="zoom" center="150,245" start="100" end="110" time="120" easing="inout"/>
      </animation>
      <animation type="UnFocus" reversible="false">
        <effect type="zoom" center="150,245" start="110" end="100" time="120" easing="inout"/>
      </animation>
      <control type="image">
        <left>24</left>
        <top>24</top>
        <width>250</width>
        <height>375</height>
        <texture border="12">img/ThumbBorder.png</texture>
        <bordersize>-9</bordersize>
      </control>
      <control type="image">
        <visible>IsEmpty(ListItem.Art(tvshow.poster))</visible>
        <left>24</left>
        <top>24</top>
        <width>250</width>
        <height>375</height>
        <texture background="true">$INFO[ListItem.Thumb]</texture>
        <aspectratio>scale</aspectratio>
      </control>
      <control type="image">
        <visible>!IsEmpty(ListItem.Art(tvshow.poster))</visible>
        <left>24</left>
        <top>24</top>
        <width>250</width>
        <height>375</height>
        <texture background="true">$INFO[ListItem.Art(tvshow.poster)]</texture>
        <aspectratio>scale</aspectratio>
      </control>
      <control type="label">
        <animation effect="fade" start="0" end="100" time="200" delay="100">Focus</animation>
        <left>5</left>
        <top>400</top>
        <width>290</width>
        <height>45</height>
        <font>size19</font>
        <textcolor>LabelNF</textcolor>
        <align>center</align>
        <label>$INFO[ListItem.Label]</label>
      </control>
      <control type="group" description="Overlay">
        <control type="image">
          <visible>!IsEmpty(ListItem.Thumb)</visible>
          <right>26</right>
          <top>24</top>
          <height>62</height>
          <width>62</width>
          <aspectratio>keep</aspectratio>
          <texture>OverlayBG.png</texture>
        </control>
        <control type="image">
          <visible>!IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
          <right>30</right>
          <top>28</top>
          <height>28</height>
          <width>28</width>
          <aspectratio>keep</aspectratio>
          <texture>$VAR[Overlay]</texture>
        </control>
      </control>
      <control type="label" description="Label2">
        <visible>container.content(TVshows) | container.content(seasons)</visible>
        <visible>IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
        <right>25</right>
        <top>17</top>
        <height>42</height>
        <width>42</width>
        <font>size14</font>
        <align>center</align>
        <textcolor>LabelFO</textcolor>
        <label>[B]$INFO[ListItem.Property(UnwatchedEpisodes)][/B]</label>
      </control>
    </control>
  </include>
</includes>
