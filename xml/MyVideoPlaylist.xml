<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>

  <controls>
    <include>FullBackground</include>
    <control type="group">
      <left>0</left>
      <top>0</top>
      <control type="group" description="Infolist">
        <visible>Control.IsVisible(50)</visible>
        <control type="group" description="Thumbs no info">
          <top>240</top>
          <animation effect="fade" time="400">Visible</animation>
          <animation effect="fade" time="0">Hidden</animation>
          <control type="image" description="Thumb Reflection">
            <left>180</left>
            <top>720</top>
            <width>621</width>
            <height>720</height>
            <include>Icon_Fade</include>
            <texture background="true" diffuse="img/Reflection0Long.png" flipy="true">$INFO[ListItem.Thumb]</texture>
            <aspectratio aligny="top">keep</aspectratio>
          </control>
          <control type="image" description="Thumb">
            <left>180</left>
            <top>0</top>
            <width>621</width>
            <height>720</height>
            <include>Icon_Fade</include>
            <texture fallback="DefaultFolder.png" background="true">$INFO[ListItem.Thumb]</texture>
            <aspectratio aligny="bottom">keep</aspectratio>
          </control>
          <control type="image" description="Thumb">
            <left>180</left>
            <top>0</top>
            <width>621</width>
            <height>720</height>
            <include>Icon_Fade</include>
            <bordertexture border="3">img/CoverOverlay0.png</bordertexture>
            <texture diffuse="img/DiffuseE.png" background="true">$INFO[ListItem.Thumb]</texture>
            <aspectratio aligny="bottom">keep</aspectratio>
          </control>
        </control>
        <control type="group" description="Slider and List">
          <include>LargeListItemCount</include>
          <left>1020</left>
          <top>141</top>
          <control type="fixedlist" id="50">
            <left>0</left>
            <top>0</top>
            <width>802</width>
            <height>888</height>
            <onleft>9000</onleft>
            <onright condition="Skin.HasSetting(Scrollbars_Active)">60</onright>
            <onright condition="!Skin.HasSetting(Scrollbars_Active)">9000</onright>
            <onup>50</onup>
            <ondown>50</ondown>
            <pagecontrol>60</pagecontrol>
            <viewtype label="535">50</viewtype>
            <focusposition>3</focusposition>
            <movement>4</movement>
            <preloaditems>4</preloaditems>

            <itemlayout width="802" height="111">
              <!--<include>ListBG</include>-->
              <control type="image" description="KEEP">
                <left>0</left>
                <top>0</top>
                <height>111</height>
                <width>166</width>
                <bordersize>8</bordersize>
                <texture>$INFO[ListItem.Thumb]</texture>
                <aspectratio>keep</aspectratio>
              </control>
              <control type="label" description="Main Label">
                <visible>!IsEmpty(ListItem.Artist) | !IsEmpty(ListItem.Label2)</visible>
                <left>195</left>
                <width>570</width>
                <include>51MainLabel</include>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="Main Label">
                <visible>IsEmpty(ListItem.Artist) + IsEmpty(ListItem.Label2)</visible>
                <top>27</top>
                <left>195</left>
                <width>570</width>
                <include>51MainLabel</include>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="Label2">
                <left>195</left>
                <include>51Label2</include>
                <label>$INFO[ListItem.Artist]</label>
              </control>
              <control type="label" description="Label2">
                <visible>IsEmpty(ListItem.Artist)</visible>
                <left>195</left>
                <include>51Label2</include>
                <label>$INFO[ListItem.Label2]</label>
              </control>
            </itemlayout>
            <focusedlayout width="802" height="111">
              <!--<include>ListBG</include>-->
              <control type="image" description="KEEP">
                <left>0</left>
                <top>0</top>
                <height>111</height>
                <width>166</width>
                <bordersize>8</bordersize>
                <texture>$INFO[ListItem.Thumb]</texture>
                <aspectratio>keep</aspectratio>
              </control>
              <control type="label" description="Main Label">
                <visible>!IsEmpty(ListItem.Artist) | !IsEmpty(ListItem.Label2)</visible>
                <left>195</left>
                <width>570</width>
                <include>51MainLabelFO</include>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="Main Label">
                <visible>IsEmpty(ListItem.Artist) + IsEmpty(ListItem.Label2)</visible>
                <top>27</top>
                <left>195</left>
                <width>570</width>
                <include>51MainLabelFO</include>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="Label2">
                <left>195</left>
                <include>51Label2FO</include>
                <label>$INFO[ListItem.Artist]</label>
              </control>
              <control type="label" description="Label2">
                <visible>IsEmpty(ListItem.Artist)</visible>
                <left>195</left>
                <include>51Label2FO</include>
                <label>$INFO[ListItem.Label2]</label>
              </control>
            </focusedlayout>
          </control>
          <include>LargeListSlider</include>
        </control>
        <!--<include>LargeListFade</include>-->
        <control type="scrollbar" id="60">
          <left>51r</left>
          <top>135</top>
          <height>870</height>
          <onleft>50</onleft>
          <onright>noop</onright>
        </control>
      </control>
      <control type="group" description="Side menu 9000 group">
        <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus()</visible>
        <include>MenuFullBG</include>
        <include>VisibleFadeEffect</include>
      <control type="grouplist" id="9000">
        <include>9000GrouplistParameters</include>
          <control type="radiobutton" id="20" description="Shuffle">
            <radioleft>630</radioleft>
            <include>9000Buttons</include>
            <label>191</label>
          </control>
          <control type="button" id="21" description="Save">
            <include>9000Buttons</include>
            <label>190</label>
          </control>
          <control type="button" id="22" description="Clear">
            <include>9000Buttons</include>
            <label>192</label>
          </control>
          <control type="button" id="23" description="Play">
            <include>9000Buttons</include>
            <label>208</label>
          </control>
          <control type="button" id="26" description="Repeat">
            <include>9000Buttons</include>
            <label>-</label>
          </control>
        </control>
      </control>
    </control>

  </controls>
</window>
