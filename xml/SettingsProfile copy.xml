<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol>2</defaultcontrol>
  <controls>
    <include>DialogFullBG</include>
    <control type="group" description="Content">
      <include>OpenClose</include>
      <control type="label" description="Heading">
        <include>HeadingR</include>
        <label>10034</label>
      </control>
      <control type="image" description="Sidebar">
        <left>0</left>
        <top>0</top>
        <width>720</width>
        <height>1080</height>
        <aspectratio>stretch</aspectratio>
        <texture>img/Sidebar.png</texture>
      </control>
      <control type="togglebutton" id="4" description="Enable Login Screen">
        <left>45</left>
        <top>180</top>
        <label>$LOCALIZE[20096]: $LOCALIZE[1223]</label>
        <altlabel>$LOCALIZE[20096]: $LOCALIZE[305]</altlabel>
        <align>left</align>
        <onright>2</onright>
        <onleft>2</onleft>
        <onup>5</onup>
        <ondown>5</ondown>
        <font>size18</font>
        <texturenofocus border="5">img/SettingsButtonNF.png</texturenofocus>
        <alttexturenofocus border="5">img/SettingsButtonNF.png</alttexturenofocus>
      </control>
      <control type="togglebutton" id="5" description="Enable Auto Login">
        <left>45</left>
        <top>270</top>
        <label>$LOCALIZE[33084]$INFO[system.profileautologin,:  ]</label>
        <altlabel>$LOCALIZE[33084]$INFO[system.profileautologin,:  ]</altlabel>
        <align>left</align>
        <onright>2</onright>
        <onleft>2</onleft>
        <onup>4</onup>
        <ondown>4</ondown>
        <font>size18</font>
        <textoffsetx>20</textoffsetx>
        <texturenofocus border="5">img/SettingsButtonNF.png</texturenofocus>
        <alttexturenofocus border="5">img/SettingsButtonNF.png</alttexturenofocus>
      </control>
      <control type="panel" id="2">
        <centerleft>75%</centerleft>
        <centertop>50%</centertop>
        <width>800</width>
        <height max="719">auto</height>
        <onup>2</onup>
        <ondown>2</ondown>
        <onleft>4</onleft>
        <itemlayout width="800" height="120">
          <control type="image">
            <left>16</left>
            <top>6</top>
            <width>770</width>
            <height>108</height>
            <texture border="4">img/SettingsButtonNF.png</texture>
            <bordersize>0</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image" description="Thumb">
            <top>14</top>
            <left>28</left>
            <width>90</width>
            <height>90</height>
            <texture diffuse="img/UserDiffuse.png">$INFO[ListItem.Thumb]</texture>
            <aspectratio scalediffuse="false">scale</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <left>140</left>
            <right>20</right>
            <top>0</top>
            <height>90</height>
            <font>size20B</font>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="INFO">
            <left>140</left>
            <right>20</right>
            <bottom>0</bottom>
            <height>66</height>
            <font>size16</font>
            <scroll>false</scroll>
            <label>$INFO[ListItem.Label2]</label>
          </control>
        </itemlayout>
        <focusedlayout width="800" height="120">
          <control type="group">
            <include>FocusButtonsAnimation</include>
            <control type="image">
              <left>16</left>
              <top>9</top>
              <width>770</width>
              <height>102</height>
              <texture border="36">focus/FrameFO.png</texture>
              <bordersize>-26</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image" description="Thumb">
              <top>14</top>
              <left>28</left>
              <width>90</width>
              <height>90</height>
              <texture diffuse="img/UserDiffuse.png" >$INFO[ListItem.Thumb]</texture>
              <aspectratio scalediffuse="false">scale</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <left>140</left>
              <right>20</right>
              <top>0</top>
              <height>90</height>
              <font>size20B</font>
              <textcolor>FocusedDark</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="INFO">
              <left>140</left>
              <right>20</right>
              <bottom>0</bottom>
              <height>66</height>
              <font>size16</font>
              <textcolor>FocusedDark</textcolor>
              <label>$INFO[ListItem.Label2]</label>
            </control>
          </control>
        </focusedlayout>
      </control>
    </control>
  </controls>
</window>
