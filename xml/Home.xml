            <visible>!Library.HasContent(movies) + !Library.HasContent(pictures) + !Library.HasContent(tvshows) + !Library.HasContent(music) + !Library.HasContent(musicvideos) + !Library.HasContent(files)</visible>
            <label>$LOCALIZE[744]</label>
            <onclick>ActivateWindow(MediaSources,root)</onclick>
