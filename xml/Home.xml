<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol>300</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <animation type="Conditional" condition="ControlGroup(9000).HasFocus()" reversible="true">
        <effect type="slide" end="0,-475" time="200" tween="sine" easing="inout"/>
      </animation>
      <control type="label" description="MainHeading">
        <top>90</top>
        <left>84</left>
        <width>1920</width>
        <font>size50B</font>
        <label>[B]MRMC[/B]</label>
        <textcolor>LabelFO</textcolor>
        <align>left</align>
      </control>
      <control type="label" description="MainHeading">
        <top>136</top>
        <left>84</left>
        <width>1920</width>
        <font>size20B</font>
        <label>$INFO[system.profilename]</label>
        <textcolor>Label2</textcolor>
        <align>left</align>
      </control>
      <control type="grouplist" id="9001">
        <right>84</right>
        <top>90</top>
        <width max="500">auto</width>
        <height>110</height>
        <itemgap>10</itemgap>
        <ondown>300</ondown>
        <onback>300</onback>
        <align>right</align>
        <aligny>center</aligny>
        <orientation>horizontal</orientation>
        <control type="button" id="1" description="User">
          <visible>IntegerGreaterThan(System.ProfileCount,1)</visible>
          <onclick>dialog.close(all,true)</onclick>
          <onclick>System.LogOff</onclick>
          <width>144</width>
          <height>80</height>
          <texturefocus>buttons/ProfilesFO.png</texturefocus>
          <texturenofocus>buttons/ProfilesNF.png</texturenofocus>
          <label>$LOCALIZE[20126]</label>
          <wrapmultiline>True</wrapmultiline>
          <font>size14</font>
          <aligny>top</aligny>
          <textoffsety>80</textoffsety>
        </control>
        <control type="button" id="2" description="Player Fullscreen">
          <visible>Player.HasMedia</visible>
          <onclick condition="Player.HasMedia">fullscreen</onclick>
          <width>144</width>
          <height>80</height>
          <texturefocus>buttons/FullscreenFO.png</texturefocus>
          <texturenofocus>buttons/FullscreenNF.png</texturenofocus>
          <label>$LOCALIZE[16003]</label>
          <wrapmultiline>True</wrapmultiline>
          <font>size14</font>
          <aligny>top</aligny>
          <textoffsety>80</textoffsety>
        </control>
        <control type="button" id="3" description="favourites">
          <onclick>ActivateWindow(favourites)</onclick>
          <width>144</width>
          <height>80</height>
          <texturefocus>buttons/FavFO.png</texturefocus>
          <texturenofocus>buttons/FavNF.png</texturenofocus>
          <label>$LOCALIZE[10134]</label>
          <font>size14</font>
          <aligny>top</aligny>
          <textoffsety>80</textoffsety>
        </control>
        <control type="button" id="4" description="settings">
          <onclick>ActivateWindow(settings)</onclick>
          <width>144</width>
          <height>80</height>
          <texturefocus>buttons/SettingsFO.png</texturefocus>
          <texturenofocus>buttons/SettingsNF.png</texturenofocus>
          <label>$LOCALIZE[10004]</label>
          <wrapmultiline>True</wrapmultiline>
          <font>size14</font>
          <aligny>top</aligny>
          <textoffsety>80</textoffsety>
        </control>
      </control>
      <control type="panel" id="300" description="Main menu">
        <top>210</top>
        <centerleft>50%</centerleft>
        <width>1800</width>
        <height>300</height>
        <onup>9001</onup>
        <ondown>Control.Move(9009,1)</ondown>
        <ondown>9000</ondown>
        <onleft>300</onleft>
        <onright>300</onright>
        <orientation>horizontal</orientation>
        <itemlayout height="200" width="300">
          <control type="image">
            <left>24</left>
            <top>24</top>
            <height>152</height>
            <width>252</width>
            <texture border="10">focus/FrameFO.png</texture>
            <bordersize>-10</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <height>50</height>
            <width>50</width>
            <texture>$INFO[ListItem.Icon]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label">
            <top>180</top>
            <left>0</left>
            <right>0</right>
            <height>40</height>
            <font>size20B</font>
            <align>center</align>
            <textcolor>LabelNF</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
        </itemlayout>
        <focusedlayout height="200" width="300">
          <control type="group" description="List in FO">
            <animation type="Focus">
              <effect type="zoom" center="auto" start="100" end="110" time="100" easing="in"/>
            </animation>
            <animation type="UnFocus">
              <effect type="zoom" center="auto" start="110" end="100" time="100" easing="out"/>
            </animation>
            <control type="image">
              <left>24</left>
              <top>24</top>
              <height>152</height>
              <width>252</width>
              <texture border="10">focus/FrameFO.png</texture>
              <bordersize>-10</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
              <centerleft>50%</centerleft>
              <centertop>50%</centertop>
              <height>50</height>
              <width>50</width>
              <texture colordiffuse="LabelFO">$INFO[ListItem.Icon]</texture>
              <aspectratio>keep</aspectratio>
            </control>
            <control type="label">
              <top>180</top>
              <left>0</left>
              <right>0</right>
              <height>40</height>
              <font>size20B</font>
              <align>center</align>
              <textcolor>LabelFO</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </control>
        </focusedlayout>
        <content>
          <item id="1">
            <visible>Library.HasServices | Library.HasContent(Movies)</visible>
            <label>$LOCALIZE[342]</label>
            <onclick>ActivateWindow(Videos,MovieTitles,return)</onclick>
            <property name="id">movies</property>
            <icon>buttons/HomeMovies.png</icon>
          </item>
          <item id="2">
            <visible>Library.HasServices | Library.HasContent(TVShows)</visible>
            <label>$LOCALIZE[20343]</label>
            <onclick>ActivateWindow(Videos,TVShowTitles,return)</onclick>
            <property name="id">tvshows</property>
            <icon>buttons/HomeTV.png</icon>
          </item>
          <item id="3">
            <visible>!Skin.HasSetting(HomeMenuNoVideosButton)</visible>
            <label>$LOCALIZE[3]</label>
            <onclick>ActivateWindow(Video,Files,return)</onclick>
            <property name="id">videos</property>
            <icon>buttons/HomeVideos.png</icon>
          </item>
          <item id="4">
            <visible>!Skin.HasSetting(HomeMenuNoMusicButton)</visible>
            <label>$LOCALIZE[2]</label>
            <onclick>ActivateWindow(Music,root,return)</onclick>
            <property name="id">music</property>
            <icon>buttons/HomeMusic.png</icon>
          </item>
          <item id="5">
            <visible>!Skin.HasSetting(HomeMenuNoMusicVideoButton) + [Library.HasServices | Library.HasContent(musicvideos)]</visible>
            <label>$LOCALIZE[20389]</label>
            <onclick>ActivateWindow(Videos,musicvideos,return)</onclick>
            <property name="id">musicvideos</property>
            <icon>buttons/HomeVideos.png</icon>
          </item>
          <item id="6">
            <visible>!Skin.HasSetting(HomeMenuNoPicturesButton)</visible>
            <label>$LOCALIZE[1]</label>
            <onclick>ActivateWindow(Pictures)</onclick>
            <property name="id">pictures</property>
            <icon>buttons/HomePictures.png</icon>
          </item>
          <item id="7">
            <visible>!Skin.HasSetting(HomeMenuNoAddonsButton)</visible>
            <label>$LOCALIZE[24001]</label>
            <onclick>ActivateWindow(Programs,Addons,return)</onclick>
            <property name="id">addons</property>
            <icon>buttons/HomeAddons.png</icon>
          </item>
        </content>
      </control>
      <control type="grouplist" id="9000">
        <top>550</top>
        <left>60</left>
        <onup>300</onup>
        <ondown>noop</ondown>
        <height max="999">auto</height>
        <aligny>top</aligny>
        <itemgap>40</itemgap>
        <control type="panel" id="8010" description="Movies OnDeck">
          <visible>IntegerGreaterThan(Container(8010).NumItems,0)</visible>
          <animation effect="fade" time="200">Visible</animation>
          <top>440</top>
          <left>60</left>
          <width>1860</width>
          <height>450</height>
          <orientation>horizontal</orientation>
          <onleft>300</onleft>
          <onright>8010</onright>
          <onup>8000</onup>
          <ondown>noop</ondown>
          <onback>300</onback>
          <itemlayout width="300" height="450">
            <include>PostersShelfNF</include>
          </itemlayout>
          <focusedlayout width="300" height="450">
            <include>PostersShelfFO</include>
          </focusedlayout>
        </control>
        <control type="panel" id="8011" description="Shows OnDeck">
          <visible>IntegerGreaterThan(Container(8011).NumItems,0)</visible>
          <animation effect="fade" time="200">Visible</animation>
          <top>600</top>
          <left>60</left>
          <width>1860</width>
          <height>450</height>
          <orientation>horizontal</orientation>
          <onleft>300</onleft>
          <onup>8001</onup>
          <ondown>noop</ondown>
          <onright>8011</onright>
          <itemlayout width="300" height="450">
            <include>PostersShelfNF</include>
          </itemlayout>
          <focusedlayout width="300" height="450">
            <include>PostersShelfFO</include>
          </focusedlayout>
        </control>
        <control type="panel" id="8000" description="Movies RA">
          <visible>IntegerGreaterThan(Container(8000).NumItems,0)</visible>
          <animation effect="fade" time="200">Visible</animation>
          <top>176</top>
          <left>60</left>
          <width>1860</width>
          <height>450</height>
          <orientation>horizontal</orientation>
          <onleft>8000</onleft>
          <onright>8000</onright>
          <onup>noop</onup>
          <ondown>8010</ondown>
          <onback>300</onback>
          <itemlayout width="300" height="450">
            <include>PostersShelfNF</include>
          </itemlayout>
          <focusedlayout width="300" height="450">
            <include>PostersShelfFO</include>
          </focusedlayout>
        </control>
        <control type="panel" id="8001" description="Shows RA">
          <visible>IntegerGreaterThan(Container(8001).NumItems,0)</visible>
          <animation effect="fade" time="200">Visible</animation>
          <top>176</top>
          <left>60</left>
          <width>1860</width>
          <height>480</height>
          <orientation>horizontal</orientation>
          <onleft>300</onleft>
          <onup>noop</onup>
          <ondown>8011</ondown>
          <onright>8001</onright>
          <itemlayout width="300" height="450">
            <include>PostersShelfNF</include>
          </itemlayout>
          <focusedlayout width="300" height="450">
            <include>PostersShelfFO</include>
          </focusedlayout>
        </control>
        <control type="panel" id="8002" description="Music RA">
          <visible>IntegerGreaterThan(Container(8002).NumItems,0)</visible>
          <animation effect="fade" time="200">Visible</animation>
          <top>366</top>
          <left>60</left>
          <width>1860</width>
          <height>410</height>
          <orientation>horizontal</orientation>
          <onleft>300</onleft>
          <onup>noop</onup>
          <ondown>8010</ondown>
          <onright>8000</onright>
          <itemlayout width="360" height="410">
            <control type="image">
              <left>26</left>
              <top>10</top>
              <width>308</width>
              <height>308</height>
              <texture border="12">img/ThumbBorder.png</texture>
              <bordersize>-5</bordersize>
            </control>
            <control type="image">
              <left>26</left>
              <top>10</top>
              <width>308</width>
              <height>308</height>
              <texture background="true">$INFO[ListItem.Thumb]</texture>
              <aspectratio aligny="top">scale</aspectratio>
            </control>
          </itemlayout>
          <focusedlayout width="360" height="410">
            <control type="group">
              <animation type="Focus" reversible="false">
                <effect type="zoom" center="auto" start="100" end="110" time="120" easing="inout"/>
              </animation>
              <animation type="UnFocus" reversible="false">
                <effect type="zoom" center="auto" start="110" end="100" time="120" easing="inout"/>
              </animation>
              <control type="image">
                <left>26</left>
                <top>10</top>
                <width>308</width>
                <height>308</height>
                <texture border="12">img/ThumbBorder.png</texture>
                <bordersize>-5</bordersize>
              </control>
              <control type="image">
                <left>26</left>
                <top>10</top>
                <width>308</width>
                <height>308</height>
                <texture background="true">$INFO[ListItem.Thumb]</texture>
                <aspectratio aligny="top">scale</aspectratio>
              </control>
              <control type="label">
                <animation effect="fade" start="0" end="100" time="200" delay="100">Focus</animation>
                <left>26</left>
                <top>330</top>
                <width>308</width>
                <height>30</height>
                <font>size16</font>
                <textcolor>LabelNF</textcolor>
                <align>center</align>
                <label>$INFO[ListItem.Label]</label>
              </control>
            </control>
          </focusedlayout>
        </control>
      </control>
    </control>
  </controls>
</window>
