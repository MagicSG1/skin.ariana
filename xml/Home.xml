          </item>
          <item id="8">
            <visible>System.HasExtensions</visible>
            <label>$LOCALIZE[24001]</label>
            <onclick>ActivateWindow(Programs,Addons,return)</onclick>
            <property name="type">extensions</property>
          </item>
