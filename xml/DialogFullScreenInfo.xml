<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
  <zorder>2</zorder>
  <defaultcontrol always="true">300</defaultcontrol>
  <controls>
    <control type="group">
      <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
      <control type="image" description="Background">
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>300</height>
        <texture>$VAR[Background.Overlay]</texture>
      </control>
      <control type="group" description="Info group">
        <top>0</top>
        <control type="image">
          <left>15</left>
          <top>30</top>
          <width>256</width>
          <height>256</height>
          <texture>$INFO[VideoPlayer.Cover]</texture>
          <aspectratio align="center" aligny="top">keep</aspectratio>
        </control>
        <control type="group">
          <left>-30</left>
          <top>30</top>
          <control type="label" description="Main label">
            <visible>![VideoPlayer.Content(MusicVideos)]</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>[B]$INFO[VideoPlayer.Title][/B]</label>
          </control>
          <control type="label" description="Main label">
            <visible>VideoPlayer.Content(MusicVideos)</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>[B]$INFO[VideoPlayer.Artist][/B]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>VideoPlayer.Content(MusicVideos)</visible>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.Album]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>VideoPlayer.Content(Episodes)</visible>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.TVShowTitle] - $LOCALIZE[20373] $INFO[VideoPlayer.Season], $LOCALIZE[20359] $INFO[VideoPlayer.Episode]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>![VideoPlayer.Content(MusicVideos) | VideoPlayer.Content(episodes)]</visible>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.Genre]</label>
          </control>
          <control type="textbox">
            <left>300</left>
            <top>99</top>
            <width>1500</width>
            <height>132</height>
            <label>$INFO[VideoPlayer.Plot]</label>
            <align>left</align>
            <autoscroll>false</autoscroll>
            <font>plot</font>
          </control>
          <control type="label" description="Details">
            <top>214</top>
            <font>size16</font>
            <include>FullscreenInfoLabel2</include>
            <label>[UPPERCASE]$INFO[VideoPlayer.VideoCodec]$INFO[VideoPlayer.VideoResolution, / ]$INFO[VideoPlayer.AudioCodec, â€¢ ]$INFO[VideoPlayer.AudioChannels, / ][/UPPERCASE]</label>
          </control>
        </control>
      </control>
    </control>
  </controls>
</window>
