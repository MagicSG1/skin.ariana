<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
  <defaultcontrol always="false">9000</defaultcontrol>
  <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
  <animation effect="fade" start="100" end="0" time="150">WindowClose</animation>
  <zorder>2</zorder>
  <controls>
    <control type="button" id="9000">
      <include>HiddenButton</include>
      <onclick>close</onclick>
    </control>
    <control type="group">
      <control type="image" description="Background">
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>300</height>
        <texture>$VAR[Background.Overlay]</texture>
      </control>
      <control type="label" description="Clock">
        <left>27r</left>
        <top>15</top>
        <width>195</width>
        <height>60</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>size18</font>
        <label>$INFO[System.Time, , ]</label>
      </control>
      <control type="label" description="End time">
        <left>27r</left>
        <top>57</top>
        <width>195</width>
        <height>60</height>
        <align>right</align>
        <aligny>center</aligny>
        <font>size17</font>
        <textcolor>Title2</textcolor>
        <label>$INFO[Player.FinishTime,(,)]</label>
      </control>
      <control type="group">
        <top>0</top>
        <control type="image">
          <left>15</left>
          <top>30</top>
          <width>256</width>
          <height>256</height>
          <texture>$INFO[VideoPlayer.Cover]</texture>
          <aspectratio align="center" aligny="top">keep</aspectratio>
        </control>
        <control type="group">
          <left>-30</left>
          <top>66</top>
          <control type="label" description="Main label">
            <visible>![VideoPlayer.Content(MusicVideos)]</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>$INFO[VideoPlayer.Title]</label>
          </control>
          <control type="label" description="Main label">
            <visible>VideoPlayer.Content(MusicVideos)</visible>
            <include>FullscreenInfoLabelMain</include>
            <label>$INFO[VideoPlayer.Artist]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>VideoPlayer.Content(MusicVideos)</visible>
            <font>size17</font>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.Album]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>VideoPlayer.Content(Episodes)</visible>
            <font>size17</font>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.TVShowTitle] - $LOCALIZE[20373] $INFO[VideoPlayer.Season], $LOCALIZE[20359] $INFO[VideoPlayer.Episode]</label>
          </control>
          <control type="label" description="Label 2">
            <visible>![VideoPlayer.Content(MusicVideos) | VideoPlayer.Content(episodes)]</visible>
            <font>size17</font>
            <include>FullscreenInfoLabel2</include>
            <label>$INFO[VideoPlayer.Genre]</label>
          </control>
          <control type="textbox">
            <left>300</left>
            <top>99</top>
            <width>1275</width>
            <height>134</height>
            <label>$INFO[VideoPlayer.Plot]</label>
            <align>jistify</align>
            <autoscroll>false</autoscroll>
            <font>plot</font>
          </control>
        </control>
        <control type="grouplist">
          <left>1710</left>
          <width>90</width>
          <top>96</top>
          <height>195</height>
          <itemgap>30</itemgap>
          <orientation>vertical</orientation>
          <align>right</align>
          <aligny>bottom</aligny>
          <control type="image">
            <height>45</height>
            <width>90</width>
            <left>0</left>
            <top>0</top>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.VideoResolution,badges/video/,.png]</texture>
          </control>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.VideoCodec)</visible>
            <height>45</height>
            <width>90</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.VideoCodec,badges/video/,.png]</texture>
          </control>
        </control>
        <control type="grouplist">
          <left>1809</left>
          <width>90</width>
          <top>96</top>
          <height>195</height>
          <itemgap>30</itemgap>
          <orientation>vertical</orientation>
          <align>right</align>
          <aligny>bottom</aligny>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.AudioChannels)</visible>
            <height>45</height>
            <width>90</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.AudioChannels,badges/channels,.png]</texture>
          </control>
          <control type="image">
            <visible>!IsEmpty(VideoPlayer.AudioCodec)</visible>
            <height>45</height>
            <width>90</width>
            <bordersize>3</bordersize>
            <aspectratio>keep</aspectratio>
            <colordiffuse>Silver</colordiffuse>
            <texture>$INFO[VideoPlayer.AudioCodec,badges/audio/,.png]</texture>
          </control>
        </control>
      </control>
    </control>
  </controls>
</window>
